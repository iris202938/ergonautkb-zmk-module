#include "ergonaut_one.dtsi"
#include <zephyr/dt-bindings/input/input-event-codes.h>
#include <input/processors.dtsi>
#include <dt-bindings/zmk/input_transform.h>
#include <dt-bindings/zmk/keys.h>
// <dt-bindings/zmk/pointing.h> はマウスホイール機能にも必要ですが、
// input-event-codes.h で定義される INPUT_REL_WHEEL_Y/X で十分な場合があります。

&adc {
	status = "okay";
};

/ {
	// 右のジョイスティック（マウスホイール用）
	anin0: analog_input_0 {
		compatible = "zmk,analog-input";
		sampling-hz = <100>;
		// 右のジョイスティックにマウスホイール機能を割り当てるため、input-codeを変更
		y-ch {
			io-channels = <&adc 0>; // Y軸がADCチャンネル0に接続 (右ジョイスティックのY軸)
			mv-mid = <1590>; // 必要に応じて調整
			mv-min-max = <1600>; // 必要に応じて調整
			mv-deadzone = <88>; // 必要に応じて調整
			scale-multiplier = <1>;
			scale-divisor = <50>;
			// マウスホイールの垂直スクロールとして使用
			#invert; // 必要に応じて反転を有効/無効化
			evt-type = <INPUT_EV_REL>;
			input-code = <INPUT_REL_WHEEL_Y>; // ここを垂直ホイールスクロールに変更
			#report-on-change-only;
		};
		x-ch {
			io-channels = <&adc 1>; // X軸がADCチャンネル1に接続 (右ジョイスティックのX軸)
			mv-mid = <1683>; // 必要に応じて調整
			mv-min-max = <1600>; // 必要に応じて調整
			mv-deadzone = <88>; // 必要に応じて調整
			scale-multiplier = <1>;
			scale-divisor = <50>;
			invert; // 必要に応じて反転を有効/無効化
			evt-type = <INPUT_EV_REL>;
			input-code = <INPUT_REL_WHEEL_X>; // ここを水平ホイールスクロールに変更

			#report-on-change-only;
		};
	};
};

&joystick_split {
	device = <&anin0>; // 右のジョイスティック (anin0) を監視
	// マウスホイールイベントはXYスワップを通常必要としないため、zip_xy_transform は削除。
	// スクロール速度を調整したい場合は zip_xy_scaler を追加
	// input-processors = <&zip_xy_scaler 1 2>; // 例: スクロール速度を半分にする (乗数1, 除数2)
};

&default_transform {
	col-offset = <6>;
};

&kscan0 {
    // row-gpiosは前回の修正で追加済みのはず
    row-gpios
        = <&gpio0 5 GPIO_ACTIVE_HIGH> // 実際のピン番号に合わせる
        , <&gpio0 6 GPIO_ACTIVE_HIGH>
        , <&gpio0 7 GPIO_ACTIVE_HIGH>
        , <&gpio0 8 GPIO_ACTIVE_HIGH>
        ;
	col-gpios
		= <&gpio0 9 GPIO_ACTIVE_HIGH>
		, <&gpio0 10 GPIO_ACTIVE_HIGH>
		, <&xiao_d 2 GPIO_ACTIVE_HIGH>
		, <&xiao_d 3 GPIO_ACTIVE_HIGH>
		, <&xiao_d 4 GPIO_ACTIVE_HIGH>
		, <&xiao_d 5 GPIO_ACTIVE_HIGH>
		;
};
